<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">
 
    <author>BARANGER Emmanuel</author>
    <aircraft-version>0.2</aircraft-version>
    <status>0.1 Alpha</status>
   
    <fuel-fraction>0.75</fuel-fraction>
  
    <startup>
      <splash-texture>Aircraft/Bell-X1/x1-splash.png</splash-texture>
    </startup>

    <sound>
      <path>Aircraft/Bell-X1/Sounds/x1-sound.xml</path>
    </sound>

    <model>
      <path>Aircraft/Bell-X1/Models/x1.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <virtual-cockpit archive="y">true</virtual-cockpit>
    <allow-toggle-cockpit archive="y">true</allow-toggle-cockpit>

    <help>
      <title>Bell X1</title>
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
    </help>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                           <!--  0 immat -->
        <int type="int" n="1">  0 </int>                                           <!--  1 immat -->
        <int type="int" n="2">  0 </int>                                           <!--  2 immat -->
        <int type="int" n="3">  0 </int>                                           <!--  3 immat -->
        <int type="int" n="4">  0 </int>                                           <!--  4 immat -->
        <int type="int" n="5">  0 </int>                                           <!--  5 immat -->
        <int type="bool" n="6" alias="/smoke/active"> 0 </int>                     <!--  6 start smoke -->
        <int type="int" n="7" alias="smoke/particlepersec"> 50 </int>              <!--  7 particlepersec -->
        <int type="int" n="10" alias="controls/armament/trigger">0</int>           <!-- 10 reserved for bombable mode -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
        <float n="2" alias="/position/gear-agl-m"> 0 </float>                      <!-- altitude for MP shadow -->
        <float n="3" alias="/smoke/colors/knob-red">1</float>                      <!-- 3 smoke mixer red setting -->
        <float n="4" alias="/smoke/colors/knob-green">1</float>                    <!-- 4 smoke mixer green setting -->
        <float n="5" alias="/smoke/colors/knob-blue">1</float>                     <!-- 5 smoke mixer blue setting -->
        <string n="9" type="string" />                                             <!-- string[9] reserved for bombable mode -->
      </generic>
    </multiplay>

    <!-- Flap settings -->
    <flaps>
        <setting> 0.0 </setting>
        <setting> 0.3 </setting>
        <setting> 1.0 </setting>
    </flaps>

    <weight n="0">
      <name>Crew</name>
      <weight-lb>180</weight-lb> 
      <max-lb>400</max-lb>
      <min-lb>180</min-lb>
    </weight>

    <replay>
      <disable>1</disable>
    </replay>

    <menubar include="Dialogs/x1-menu.xml"/>

  </sim>

  <environment>
    <turbulence>
      <use-cloud-turbulence>true</use-cloud-turbulence>
    </turbulence>
  </environment>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <running>true</running>
    </engine>
  </engines>

  <consumables>
    <fuel>
      <tank n="0">
        <tank-num type="int">0</tank-num>
        <level-gal_us archive="y">2070</level-gal_us>
      </tank>
    </fuel>
  </consumables>

  <input>
    <keyboard include="Nasal/x1-keyboard.xml"/>
  </input>
 
  <controls>
    <gear>
      <brake-parking type="double">1</brake-parking>
    </gear>
    <switches>
      <landing-light>0</landing-light>
      <fusee>0</fusee>
    </switches>
  </controls>

  <nasal>
    <doors>
      <file>Aircraft/Bell-X1/Nasal/doors.nas</file>
    </doors>
    <x1>
      <file>Aircraft/Bell-X1/Nasal/light.nas</file>
      <file>Aircraft/Bell-X1/Nasal/liveries.nas</file>
    </x1>
  </nasal>
   
</PropertyList>

